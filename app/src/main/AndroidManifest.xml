<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookshelf">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BookActivity"
                  android:parentActivityName=".SearchBooks">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SearchBooks" />
        </activity>
        <activity android:name=".UserActivity"
                  android:parentActivityName=".BookActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BookActivity" />
        </activity>
        <activity android:name=".UserBooks" />
        <activity android:name=".UserNotifications" />
        <activity android:name=".SearchBooks" />
        <activity android:name=".UserProfile" />
        <activity android:name=".Signin" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>